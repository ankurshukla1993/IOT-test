<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_device_address"
            android:textSize="18sp" />

        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/device_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_state"
            android:textSize="18sp" />

        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/connection_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/disconnected"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <!--<TextView android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/label_data"-->
        <!--android:textSize="18sp"/>-->
        <!--<Space android:layout_width="5dp"-->
        <!--android:layout_height="wrap_content"/>-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown Data"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/data_value_ACTION_DATA_AVAILABLE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTION_DATA_AVAILABLE"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/data_value_EXTRA_DATA_BATTERY_STATUS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXTRA_DATA_BATTERY_STATUS"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Systolic"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/data_value_EXTRA_DATA_SYSTOLIC_PROGRESS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXTRA_DATA_SYSTOLIC_PROGRESS"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BP Systolic"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/data_value_EXTRA_DATA_BP_SYSTOLIC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXTRA_DATA_BP_SYSTOLIC"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BP Diastolic"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/data_value_EXTRA_DATA_BP_DIASTOLIC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXTRA_DATA_BP_DIASTOLIC"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bp Heart rate"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/data_value_EXTRA_DATA_BP_HEART_RATE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXTRA_DATA_BP_HEART_RATE"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data error"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/data_value_EXTRA_DATA_ERROR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXTRA_DATA_ERROR"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/gatt_services_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>